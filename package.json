    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^11.13.5",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.24.0",
    "lucide-react": "^0.468.0",
    "next": "15.1.0",
    "next-auth": "^4.24.11",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.4",
