{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyzer": "ANALYZE=true next build",
    "start": "next start",
    "find-deadcode": "ts-prune -p tsconfig.json -e",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings=0",
    "lint:css": "stylelint src --max-warnings=0",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "postinstall": "husky install",
    "generate": "yarn plop --plopfile generators/plopfile.js",
    "generate:atom": "yarn plop --plopfile ./generators/plopfile.js atoms",
    "generate:mole": "yarn plop --plopfile ./generators/plopfile.js molecules",
    "generate:orgs": "yarn plop --plopfile ./generators/plopfile.js organisms",
    "chromatic": "chromatic --project-token=CHROMATIC_PROJECT_TOKEN",
    "release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "bash -c tsc --noEmit",
      "yarn find-deadcode",
      "yarn lint --fix",
      "yarn lint:css --fix",
      "yarn test --findRelatedTests --bail --passWithNoTests"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "showDetails": true
  },
  "dependencies": {
    "@next/bundle-analyzer": "^13.1.6",
    "@next/font": "^13.1.6",
    "next": "13.1.6",
    "next-pwa": "^5.6.0",
    "next-seo": "^5.15.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sharp": "^0.31.3",
    "styled-components": "5.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@next/eslint-plugin-next": "^13.1.6",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-a11y": "^7.0.0-beta.44",
    "@storybook/addon-essentials": "7.0.0-beta.44",
    "@storybook/addon-interactions": "^7.0.0-beta.44",
    "@storybook/addon-links": "^7.0.0-beta.44",
    "@storybook/addon-toolbars": "^7.0.0-beta.43",
    "@storybook/addon-viewport": "^7.0.0-beta.44",
    "@storybook/nextjs": "7.0.0-beta.45",
    "@storybook/react": "7.0.0-beta.44",
    "@storybook/theming": "^7.0.0-beta.29",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.27",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "chromatic": "^6.17.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^13.1.6",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-stylelint": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.10",
    "eslint-plugin-styled-components-a11y": "^0.1.0",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "jest-environment-jsdom": "^29.4.2",
    "jest-styled-components": "^7.1.1",
    "lint-staged": "^13.1.1",
    "plop": "^3.1.2",
    "postcss-scss": "^4.0.6",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.8.4",
    "semantic-release": "^20.1.0",
    "storybook": "7.0.0-beta.44",
    "storybook-addon-designs": "^6.3.1",
    "storybook-addon-pseudo-states": "^2.0.0-next.0",
    "storybook-dark-mode": "^2.0.5",
    "stylelint": "^14.16.1",
    "stylelint-config-clean-order": "^2.3.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^6.0.1",
    "ts-node": "^10.9.1",
    "ts-prune": "^0.10.3",
    "typescript": "^4.9.5"
  }
}
