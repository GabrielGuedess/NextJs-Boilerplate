{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules", "**/**.mdx", "cypress", "cypress.config.ts"],
  "include": [
    "next.config.ts",
    "postcss.config.js",
    "apollo.config.js",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".storybook/**/*.tsx",
    ".storybook/**/*.ts",
    ".jest/jest.setup.ts",
    "**/*.ts",
    "**/*.mjs",
    "**/*.tsx"
  ],
  "paths": {
    "@root/*": ["./"]
  }
}
